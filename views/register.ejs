            phone: document.querySelector('.error.phone'),
            country: document.querySelector('.error.country'),
            state: document.querySelector('.error.state'),
            city: document.querySelector('.error.city'),
            gender: document.querySelector('.error.gender'),
            currency: document.querySelector('.error.currency'),
            password: document.querySelector('.error.password'),
            security_question: document.querySelector('.error.security_question'),
            security_answer: document.querySelector('.error.security_answer')
        };

        form.addEventListener('submit', async (e) => {
            e.preventDefault();
            Object.values(errors).forEach(error => error.textContent = '');

            const formData = {
                first_name: form.first_name.value,
                last_name: form.last_name.value,
                email: form.email.value,
                phone: form.phone.value,
